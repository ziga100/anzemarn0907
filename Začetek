from colorama import Fore, Back, Style
import os
from sys import exit

def CheckIfNumber(number):
    if number.isdigit() == True:
        return True
    else: 
        print("Entered value is not a number")
        return False


print("Hallo")
myName = raw_input("What is your name?")
if any(c.isalpha() for c in myName) == False:
    print("name is not waild. Exitting!")
    exit()
mvVar = 'Hallo'
print(Fore.RED + mvVar+" "+myName + Fore.WHITE)
raw_input("Press space to continue")
os.system('cls')
print("use help to continue")

while True:
    komanda = raw_input("> ")
    komanda = komanda.lower()
    if komanda == "help":
        print("Next commands are available:")
        print("help - print this help")
        print("exit - quit program")
        print("cls - clear screen")
    elif komanda == "exit":
        print("goodbye")
        exit()
    elif komanda == "":
        continue 
    elif komanda == "cls":
        os.system('cls')
    elif komanda == "sum":
        num1 = raw_input("Enter number 1: ")
        if CheckIfNumber(num1) == False:
            continue
        num2 = raw_input("Enter number 2: ")
        if CheckIfNumber(num2) == False:
            continue
        num3 = int(num1) + int(num2)
        print("sum is = ", num3)
    else:
        print("Command not found")
    






